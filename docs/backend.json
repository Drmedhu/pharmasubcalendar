{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user profile in the PharmaSub Calendar application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the UserProfile entity."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "User's full name."
        },
        "role": {
          "type": "string",
          "description": "The role of the user, e.g., 'pharmacy', 'substitute'."
        }
      },
      "required": [
        "id",
        "email",
        "name",
        "role"
      ]
    },
    "Pharmacy": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Pharmacy",
      "type": "object",
      "description": "Represents a pharmacy in the PharmaSub Calendar application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Pharmacy entity."
        },
        "name": {
          "type": "string",
          "description": "Pharmacy name."
        },
        "address": {
          "type": "string",
          "description": "Pharmacy address."
        },
        "email": {
          "type": "string",
          "description": "Pharmacy contact email."
        },
        "userId": {
          "type": "string",
          "description": "Reference to the UserProfile who owns this pharmacy."
        }
      },
      "required": [
        "id",
        "name",
        "address",
        "email",
        "userId"
      ]
    },
    "Shift": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Shift",
      "type": "object",
      "description": "Represents a shift posted by a pharmacy.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Shift entity."
        },
        "userId": {
          "type": "string",
          "description": "Reference to the UserProfile (pharmacy) posting the shift."
        },
        "date": {
          "type": "string",
          "description": "Shift date.",
          "format": "date-time"
        },
        "startTime": {
          "type": "string",
          "description": "Shift start time."
        },
        "endTime": {
          "type": "string",
          "description": "Shift end time."
        },
        "payRate": {
          "type": "number",
          "description": "Pay rate for the shift."
        },
        "status": {
          "type": "string",
          "description": "Indicates whether the shift is 'available' or 'booked'."
        },
        "role": {
          "type": "string",
          "description": "The role required for the shift, e.g., 'pharmacist' or 'assistant'."
        },
        "bookedBy": {
          "type": "string",
          "description": "Reference to UserProfile of the substitute pharmacist who booked the shift."
        }
      },
      "required": [
        "id",
        "userId",
        "date",
        "startTime",
        "endTime",
        "payRate",
        "status",
        "role"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "collections": {
      "userProfiles": {
        "schema": "UserProfile",
        "description": "Stores user profile information."
      },
      "pharmacies": {
        "schema": "Pharmacy",
        "description": "Stores pharmacy information."
      },
      "shifts": {
        "schema": "Shift",
        "description": "Stores shift information for all pharmacies."
      }
    }
  }
}
    