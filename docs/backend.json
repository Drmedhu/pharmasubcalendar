{
  "entities": {
    "Pharmacy": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Pharmacy",
      "type": "object",
      "description": "Represents a pharmacy that posts shifts.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the pharmacy."
        },
        "address": {
          "type": "string",
          "description": "Address of the pharmacy."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who created the pharmacy."
        }
      },
      "required": [
        "name",
        "address",
        "userId"
      ]
    },
    "Shift": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Shift",
      "type": "object",
      "description": "Represents a shift posted by a pharmacy.",
      "properties": {
        "pharmacyId": {
          "type": "string",
          "description": "Reference to Pharmacy. (Relationship: Pharmacy 1:N Shift)"
        },
        "date": {
          "type": "string",
          "description": "Date of the shift.",
          "format": "date-time"
        },
        "startTime": {
          "type": "string",
          "description": "Start time of the shift."
        },
        "endTime": {
          "type": "string",
          "description": "End time of the shift."
        },
        "payRate": {
          "type": "number",
          "description": "Pay rate for the shift."
        },
        "status": {
          "type": "string",
          "enum": ["available", "booked"]
        },
        "role": {
          "type": "string",
          "enum": ["pharmacist", "assistant"]
        },
        "bookedBy": {
          "type": "string",
          "description": "Reference to the user who booked the shift. Nullable if the shift isn't booked."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who created the shift."
        }
      },
      "required": [
        "pharmacyId",
        "date",
        "startTime",
        "endTime",
        "payRate",
        "status",
        "userId",
        "role"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/pharmacies/{pharmacyId}",
        "definition": {
          "entityName": "Pharmacy",
          "schema": {
            "$ref": "#/entities/Pharmacy"
          },
          "description": "Stores pharmacy information. Each document represents a pharmacy. The 'pharmacyId' is used as the document ID."
        }
      },
      {
        "path": "/shifts/{shiftId}",
        "definition": {
          "entityName": "Shift",
          "schema": {
            "$ref": "#/entities/Shift"
          },
          "description": "Stores shift information."
        }
      }
    ]
  }
}
